<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#e1d337"
    android:padding="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/uang_input"
            android:textColor="#000"
            android:textSize="20sp"
            android:hint="0 Rupiah"/>
        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="="
            android:textSize="20sp"/>

        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hasil_konversi"
            android:text="Hasil Konversi"
            android:textColor="#000"
            android:background="#e1d337"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:layout_width="270dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:text="Rp > USD"
        android:textSize="20sp"
        android:textColor="#000"
        android:background="#FFf"
        android:layout_margin="10dp"
        android:onClick="toUSD"
        android:id="@+id/rpusd"
        android:layout_weight="1"/>

    <Button
        android:layout_width="270dp"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="Rp > YEN"
        android:textColor="#000"
        android:background="#ffff "
        android:onClick="toYEN"
        android:id="@+id/rpyen"
        android:layout_weight="1"/>

    <Button
        android:layout_weight="1"
        android:layout_width="270dp"
        android:layout_margin="5dp"
        android:textColor="#000"
        android:background="#fff"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Rp > Euro"
        android:textSize="20sp"
        android:onClick="toEuro"
        android:id="@+id/rpeuro"/>

    </LinearLayout>

</LinearLayout>